@model IEnumerable<Avaliacao.WorkinHub.Web.Models.Pedido>

@{
    if (Model != null)
    {
        <br /><br />
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title">Pedidos de vendas carregados</h4>
            </div>
            <div class="panel-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Cliente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descricao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PrecoUnitario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantidade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Endereco)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fornecedor)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PrecoUnitario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantidade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Endereco)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fornecedor)
                            </td>
                        </tr>
                    }
                </table>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="alert alert-danger" role="alert">
                            Valor Total dos Pedidos: R$ @Model.Sum(x => x.PrecoUnitario * x.Quantidade).ToString("N2")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

}

